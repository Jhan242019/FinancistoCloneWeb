@{
    var account = (Account)Model;
}

<h1>Editar Cuenta</h1>

<form class="row" action="/account/edit" enctype="multipart/form-data" method="post">

    <input type="hidden" name="Id" value="@account.Id" />
    <input type="hidden" name="UserId" value="@account.UserId" />
    <input type="hidden" name="ImagePath" value="@account.ImagePath" />

    <div class="col-12">
        <label class="form-label">Imagen</label>
        <div class="col-12">
            <img src="@account.ImagePath" width="150" />
        </div>
        <input type="file" name="Image"/>
    </div>
    <div class="col-12">
        <label class="form-label">Tipo</label>
        <select name="TypeId" class="form-control">
            @foreach (var item in ViewBag.Types)
            {
                if (account.TypeId == item.Id)
                {
                    <option value="@item.Id">@item.Nombre</option>
                }
                else
                {
                    <option value="@item.Id">@item.Nombre</option>
                }
            }
        </select>
    </div>

    <div class="col-12">
        <label class="form-label">Nombre</label>
        <input class="form-control" name="Name" value="@account.Name" />
        @Html.ValidationMessage("Name")
    </div>

    <div class="col-12">
        <label class="form-label">Divisa</label>
        <select class="form-control" name="Currency">
            <option value="Soles">Soles</option>
        </select>
    </div>

    <div class="col-12">
        <label class="form-label">Saldo Inicial</label>
        <input type="number" class="form-control" name="Amount" value="@account.Amount" readonly/>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-success" style="margin:1rem 0rem;">Guardar</button>
        <a class="btn btn-danger" href="/account">Cancelar</a>
    </div>
</form>
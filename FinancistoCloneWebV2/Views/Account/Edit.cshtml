@{
    var account = (Account)Model;
}

<h1>Editar Cuenta</h1>

<form class="row" action="/account/edit" method="post">
    <div class="col-12">
        <input type="hidden" name="Id" value="@account.Id"/>

        <label class="form-label">Tipo</label>
        <select name="Type" class="form-control">
            @foreach (var item in ViewBag.Types)
            {
                if (account.Type == item)
                {
                    <option value="@item" selected>@item</option>
                }
            }
        </select>
    </div>

    <div class="col-12">
        <label class="form-label">Nombre</label>
        <input class="form-control" name="Name" value="@account.Name" />
        @Html.ValidationMessage("Name")
    </div>

    <div class="col-12">
        <label class="form-label">Divisa</label>
        <select class="form-control" name="Currency">
            <option value="Soles">Soles</option>
        </select>
    </div>

    <div class="col-12">
        <label class="form-label">Saldo Inicial</label>
        <input type="number" class="form-control" name="Amount" value="@account.Amount" />
    </div>
    <div class="col-12">
        <br />
        <button type="submit" class="btn btn-success">Guardar</button>
    </div>
</form>
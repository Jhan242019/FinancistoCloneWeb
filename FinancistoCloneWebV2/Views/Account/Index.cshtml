
@{
    List<Account> accounts = (List<Account>)Model;
}
<h1 class="">Accounts</h1>

<a href="/account/create" class="btn btn-success">Crear Cuenta</a>
<br />
<br />

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Imagen</th>
            <th>Tipo</th>
            <th>Nombre</th>
            <th>Divisa</th>
            <th>Saldo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @{            
            foreach (var item in accounts)
            {
                <tr>
                    <td class="col-2">
                        <img class="img-fluid" src="@item.ImagePath" alt="Imagen de la cuenta">
                    </td>
                    <td>@item.Type.Nombre</td>
                    <td>@item.Name</td>
                    <td>@item.Currency</td>
                    <td>S/. @item.Amount</td>
                    <td>
                        <a href="/account/edit?id=@item.Id">Editar</a> |
                        <a href="/account/delete?id=@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>